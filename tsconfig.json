{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"],
      "@server/*": ["server/*"]
    },
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  }
}
